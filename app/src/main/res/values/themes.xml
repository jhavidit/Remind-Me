<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RemindMe" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>


    <style name="OpenSourceLicenseTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>



    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/purple_200</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="android:textColor">@color/purple_200</item>
        <item name="buttonTint">@color/white</item>

    </style>

    <style name="RadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rb_tab_selector</item>
        <item name="android:gravity">center</item>
        <item name="elevation">10dp</item>
        <item name="fontFamily">@font/alata_regular</item>
        <item name="android:textColor">@drawable/rb_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyAppTheme.NumberPicker" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:colorControlNormal">#00000000</item>
        <item name="android:fontFamily">@font/alata_regular</item>
        <item name="android:textColorPrimary">@color/purple_200</item>
        <item name="android:textSize">@dimen/dimen_text_24</item>

    </style>

    <style name="MySlider" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/My_Tooltip</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

    <style name="My_Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <!-- background color of the Tooltip -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundTint">@color/purple_200</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <!-- color used by the text in the Tooltip -->
        <item name="backgroundTint">@color/purple_200</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>


</resources>